<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="General">
		<EditTextPreference
			android:title="Name"
            android:key="@string/pref_update_name"
            android:summary="Placeholder Name"
			android:dialogTitle="Update Your Name:"
            android:defaultValue=""
      		android:maxLines="1"/>
		<EditTextPreference
			android:title="E-mail"
            android:key="@string/pref_update_email"
            android:summary="Placeholder E-mail"
			android:dialogTitle="Update Your E-mail:"
            android:defaultValue=""
      		android:maxLines="1"/>
		<Preference android:title="Contacts" android:key="@string/pref_contacts" android:summary="View and Edit your current contacts" />
	</PreferenceCategory>
  
	<PreferenceCategory
		android:title="Bugdeting"
    android:key="@string/pref_budgeting_category">
		<CheckBoxPreference
			android:title="Enable Budgeting Insights"
			android:summary="@string/settings_insights_subtitle"
            android:key="@string/pref_enable_insights"
      android:defaultValue="false"/>
    <PreferenceScreen
        android:key="@string/pref_insights_categories"
        android:title="Edit Category Budgets...">
      <EditTextPreference android:title="Food/Drink" android:key="@string/pref_food_drink" android:inputType="numberDecimal" android:maxLines="1" android:defaultValue="0"/>
      <EditTextPreference android:title="Entertainment" android:key="@string/pref_entertainment" android:inputType="numberDecimal" android:maxLines="1" android:defaultValue="0"/>
      <EditTextPreference android:title="Utilities" android:key="@string/pref_utilities" android:inputType="numberDecimal" android:maxLines="1" android:defaultValue="0"/>
      <EditTextPreference android:title="Education" android:key="@string/pref_education"  android:inputType="numberDecimal" android:maxLines="1" android:defaultValue="0"/>
      <EditTextPreference android:title="Personal Care" android:key="@string/pref_personal_care" android:inputType="numberDecimal" android:maxLines="1"  android:defaultValue="0"/>
      <EditTextPreference android:title="Shopping" android:key="@string/pref_shopping" android:inputType="numberDecimal" android:maxLines="1"  android:defaultValue="0"/>
      <EditTextPreference android:title="Work" android:key="@string/pref_work" android:inputType="numberDecimal" android:maxLines="1"  android:defaultValue="0" />
      <EditTextPreference android:title="Travel" android:key="@string/pref_travel" android:inputType="numberDecimal" android:maxLines="1" android:defaultValue="0" />
      <EditTextPreference android:title="Transportation" android:key="@string/pref_transportation" android:inputType="numberDecimal" android:maxLines="1" android:defaultValue="0" />
      <EditTextPreference android:title="Charity" android:key="@string/pref_charity" android:inputType="numberDecimal" android:maxLines="1"  android:defaultValue="0"/>
      <EditTextPreference android:title="Investment" android:key="@string/pref_investment" android:inputType="numberDecimal" android:maxLines="1" android:defaultValue="0"/>
      <EditTextPreference android:title="Other" android:key="@string/pref_other" android:inputType="numberDecimal" android:maxLines="1" android:defaultValue="0"/>
    </PreferenceScreen>
	</PreferenceCategory>

		<PreferenceCategory android:title="About">
		<Preference android:title="Version" android:summary="@string/app_version" />
	</PreferenceCategory>
	
</PreferenceScreen>